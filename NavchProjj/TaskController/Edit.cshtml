@model TaskManager.TaskItem
@{
    ViewData["Title"] = "Edit Task";
}

<h1>Edit Task</h1>
<form method="post">
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="Title" value="@Model.Title" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" name="Description">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label>Priority</label>
        <select class="form-control" name="Priority">
            <option @if (Model.Priority == "Low") { <text>selected</text> }>Low</option>
            <option @if (Model.Priority == "Medium") { <text>selected</text> }>Medium</option>
            <option @if (Model.Priority == "High") { <text>selected</text> }>High</option>
        </select>
    </div>
    <div class="form-group">
        <label>Due Date</label>
        <input class="form-control" type="date" name="DueDate" value="@Model.DueDate.ToString(\"yyyy-MM-dd\")" />
    </div>
    <button type="submit" class="btn btn-success">Save Changes</button>
</form>

