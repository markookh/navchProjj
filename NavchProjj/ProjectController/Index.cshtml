@model IEnumerable<TaskManager.Project>
@{
    ViewData["Title"] = "Projects";
}

<h1>Project List</h1>
<a class="btn btn-primary" href="/Project/Create">Create New Project</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Number of Tasks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>@project.Tasks?.Count ?? 0</td>
                <td>
                    <a class="btn btn-warning" href="/Project/Edit/@project.Id">Edit</a>
                    <form method="post" action="/Project/Delete/@project.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

